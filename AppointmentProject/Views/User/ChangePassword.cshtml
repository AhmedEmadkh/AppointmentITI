@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title</h2>

<form asp-action="ChangePassword" method="post">
    <div class="form-group">
        <label for="oldPassword">Old Password</label>
        <input type="password" class="form-control" id="oldPassword" name="oldPassword" required maxlength="64"/>
    </div>
    <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password" class="form-control" id="newPassword" name="newPassword" required maxlength="64" />
    </div>
    <p id="messages" class="">
        <span class="text-danger">@ViewData["ErrorMessage"]</span>
        <span class="text-success">@ViewData["Message"]</span>
    </p>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>
