@model IEnumerable<AppointmentProject.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<body>
    <main class="py-5 container">
        <div class="container d-flex flex-column justify-content-center align-items-center">
            <h1>Appointments</h1>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["ErrorMessage"]
                </div>
            }
            else
            {
                <div class="container-sm">
                    <div class="align-self-xl-start mb-3">
                        <a class="btn btn-primary" href="@Url.Action("Create")">New Appointment</a>
                    </div>

                    <!-- Appointment list -->
                    <div class="row">
                        @if (Model.Any())
                        {
                            @foreach (var appointment in Model)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title text-danger">@appointment.Title</h5>
                                            <p class="card-text text-primary">
                                                <strong>Description:</strong> @appointment.Description
                                            </p>
                                            <p class="card-text text-dark">
                                                <strong>Date:</strong> @appointment.AppointmentDate.ToString("MMMM dd, yyyy HH:mm")
                                            </p>

                                            <div class="d-flex justify-content-between mt-3 ">
                                                <a class="btn btn-warning" href="@Url.Action("Edit", new { id = appointment.AppointmentId })">Edit</a>
                                                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = appointment.AppointmentId })">Delete</a>
                                        
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info text-center">
                                    No appointments found.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </main>
</body>
