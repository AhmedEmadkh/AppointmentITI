@model AppointmentProject.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="container my-5 text-center">
    <div class="groub-box m-auto w-75 p-5">
        <h1>Reset Password</h1>
        <p>Enter your new password below:</p>

        @if (ViewData["SuccessMessage"] != null)
        {
            <p class="text-success fw-bold">@ViewData["SuccessMessage"]</p>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary">
                <p class="text-danger">
                    @Html.ValidationSummary(false)
                </p>
            </div>
        }

        <form method="post">
            <input type="hidden" name="ResetToken" value="@Model.ResetToken" />
            <input type="password" name="NewPassword" id="newPassword" class="form-control my-3 text-black" placeholder="Enter New Password" />
            <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control my-3 text-black" placeholder="Confirm New Password" />
            <p id="passwordMismatch" class="d-none">
                <span class="text-danger">Passwords do not match</span>
            </p>
            <button type="submit" id="resetBtn" class="btn btn-outline-info w-100 my-3">
                Reset Password
            </button>
        </form>
        <p class="text-black fs-5">Remembered your password? <a class="text-black sing-up" href="@Url.Action("SignIn", "Account")">Sign In</a></p>
    </div>
</div>

<script src="~/JS/reset-password.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
