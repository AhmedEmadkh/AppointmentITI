@{
}
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="container my-5 text-center">
    <div class="groub-box m-auto w-75 p-5">
        <h1>Reset Password</h1>
        <p>Enter your new password below:</p>
        <input type="password" id="newPassword" class="form-control my-3 text-black" placeholder="Enter New Password">
        <input type="password" id="confirmPassword" class="form-control my-3 text-black" placeholder="Confirm New Password">
        <p id="passwordMismatch" class="d-none">
            <span class="text-danger">Passwords do not match</span>
        </p>
        <p id="passwordReset" class="d-none">
            <span class="text-success fw-bold">Your password has been reset successfully</span>
        </p>
        <button id="resetBtn" class="btn btn-outline-info w-100 my-3">
            Reset Password
        </button>
        <p class="text-black fs-5">Remembered your password? <a class="text-black sing-up" href="@Url.Action("SignIn", "Home")">Sign In</a></p>
    </div>
</div>

<script src="~/JS/reset-password.js"></script>
