@{
    ViewData["Title"] = "Forget Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-reboot.min.css">
    <!-- Style CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Media CSS -->
    <link rel="stylesheet" href="~/css/media.css">
</head>
<body>
    <div class="container my-5 text-center">
        <div class="groub-box m-auto w-75 p-5">
            <h1>Reset Your Password</h1>
            <form method="post" action="/Account/ForgetPassword">
                <input type="text" name="email" class="form-control my-3 text-black" placeholder="Enter Your Email">
                <p class="text-danger">@ViewBag.Message</p>
                <button type="submit" class="btn btn-outline-info w-100 my-3">Send Reset Link</button>
            </form>
        </div>
    </div>

    <script src="~/JS/bootstrap.bundle.min.js"></script>
</body>
</html>

@model AppointmentProject.Models.ViewModels.ForgotPasswordViewModel



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

